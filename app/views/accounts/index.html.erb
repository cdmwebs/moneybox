<h3>Accounts</h3>
<ul>
<% @accounts.each do |account| %>
  <%= content_tag :li do %>
    <%= link_to account.name, account_transactions_path(account.id) %>
    <%= content_tag :span, account.balance.format, class: "badge #{account.badge_style}" %>
  <% end %>
<% end %>
</ul>
<%= link_to "new account", new_account_path, class: 'btn' %>